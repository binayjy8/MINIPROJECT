<% layout ("/layouts/boilerplate") %> 

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-3">Signup in mini BNB</h1>
    <div class="col-6 offset-3">
        <form method="POST" action="/signup" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input
                name="username"
                id="username"
                type="text"
                class="form-control"
                required
                >
                <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
                <label for="username" class="form-label">Email</label>
                <input
                name="email"
                id="email"
                type="text"
                class="form-control"
                required
                >
            </div>

            <div class="mb-3">
                <label for="username" class="form-label">password</label>
                <input
                name="password"
                id="password"
                type="password"
                class="form-control"
                required
                >
                <div class="valid-feedback">Looks good!</div>
            </div>

            <button class="btn btn-success mb-3">Login</button>
        </form>
    </div>
</div>